@page
@model SE1611_Group3_A3.Pages.Albums.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.AlbumId" />
            <div class="form-group">
                <label asp-for="@Model.FileUpload" class="control-label"></label>
                <input asp-for="@Model.FileUpload" class="form-control" />
                <span asp-validation-for="@Model.FileUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.GenreId" class="control-label"></label>
                <select asp-for="Album.GenreId" class="form-control" asp-items="ViewBag.GenreName"></select>
                <span asp-validation-for="Album.GenreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.ArtistId" class="control-label"></label>
                <select asp-for="Album.ArtistId" class="form-control" asp-items="ViewBag.ArtistName"></select>
                <span asp-validation-for="Album.ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Price" class="control-label"></label>
                <input asp-for="Album.Price" class="form-control" />
                <span asp-validation-for="Album.Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
